<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvMessageUnread"
                android:layout_marginTop="0dp"
                android:visibility="gone"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/drawable_main_unread"
                android:textColor="@color/main_unread"
                android:text="20" />

            <ImageView
                android:layout_width="@dimen/main_tab_img_size"
                android:layout_height="@dimen/main_tab_img_size"
                android:id="@+id/ivIcon"
                android:src="@drawable/drawable_main_me" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/main_tab_textsize"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/main_me" />
    </LinearLayout>
</FrameLayout>