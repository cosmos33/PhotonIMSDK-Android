<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRoot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_chat"
    android:padding="@dimen/activity_padding">

    <TextView
        android:id="@+id/tvCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/chat_popup_copy"
        android:textColor="@color/white" />

    <include
        android:id="@+id/divider_copy"
        layout="@layout/divider_vertical_gray" />

    <TextView
        android:id="@+id/tvRelay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/chat_popup_relay"
        android:textColor="@color/white" />

    <include
        android:id="@+id/divider_revert"
        layout="@layout/divider_vertical_gray" />

    <TextView
        android:id="@+id/tvRevert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/chat_popup_revert"
        android:textColor="@color/white" />

    <include
        android:id="@+id/divider_revert"
        layout="@layout/divider_vertical_gray" />

    <TextView
        android:id="@+id/tvDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="删除"
        android:textColor="@color/white" />
</LinearLayout>