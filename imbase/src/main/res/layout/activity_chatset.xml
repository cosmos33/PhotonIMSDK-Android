<?xml version="1.0" encoding="utf-8"?>
<com.cosmos.photonim.imbase.view.SwipeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <com.cosmos.photonim.imbase.view.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title_margin_top"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:padding="@dimen/activity_padding">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="@dimen/chat_icon"
            android:layout_height="@dimen/chat_icon"
            android:layout_marginRight="@dimen/icon_margin_right"
            apps:src="@drawable/head_placeholder" />

        <TextView
            android:id="@+id/tvNickName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <include layout="@layout/searchcontent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title_margin_top"
        android:background="@color/white"
        android:padding="@dimen/activity_padding"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chatset_top" />

        <Switch
            android:id="@+id/sTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/title_margin_top"
        android:background="@color/white"
        android:padding="@dimen/activity_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chatset_ban" />

        <Switch
            android:id="@+id/sBan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />
    </FrameLayout>

    <include layout="@layout/chat_content_clear" />
</com.cosmos.photonim.imbase.view.SwipeLinearLayout>