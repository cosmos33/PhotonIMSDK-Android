<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/media_bg"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/flCoverContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/ivPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/video_play" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="120dp">

        <ImageView
            android:id="@+id/ivReturn"
            android:layout_width="@dimen/chat_media_width"
            android:layout_height="@dimen/chat_media_width"
            android:src="@drawable/media_left" />

        <ImageView
            android:id="@+id/ivDone"
            android:layout_width="@dimen/chat_media_width"
            android:layout_height="@dimen/chat_media_width"
            android:layout_gravity="right"
            android:src="@drawable/media_send" />
    </FrameLayout>
</FrameLayout>